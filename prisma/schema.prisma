generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MealPlan {
  id           Int            @id @default(autoincrement())
  name         String
  price        Int
  description  String
  imageUrl     String?
  Subscription Subscription[]
}

model Subscription {
  id           Int            @id @default(autoincrement())
  userId       Int
  user         User           @relation(fields: [userId], references: [id])
  fullName     String
  phoneNumber  String
  domicile     String
  planId       Int
  plan         MealPlan       @relation(fields: [planId], references: [id])
  allergies    String?
  deliveryDays DeliveryDays[]
  isCancelled  Boolean        @default(false)
  status       String         @default("active")
  pauseFrom    DateTime?
  pauseUntil   DateTime?
  startDate    DateTime       @default(now())
  endDate      DateTime       
  isExpired    Boolean        @default(false)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  mealTypes    MealTypes[]
}

enum MealTypes {
  Breakfast
  Lunch
  Dinner
  Snack
}

enum DeliveryDays {
  Sun
  Mon
  Tue
  Wed
  Thu
  Fri
  Sat
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  message   String
  rating    Int
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  name         String
  password     String
  avatarUrl    String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  testimonial  Testimonial[]
  Subscription Subscription[]
}
